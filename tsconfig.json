{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "built",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node"
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": false,
        "useCache": false,
        "emitRequireType": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "typings/main",
        "typings/main.d.ts"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ]
}