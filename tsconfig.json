{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "lib":["es6","dom"],
        "noImplicitAny": false,
        "outDir": "built",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node"
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": false,
        "useCache": false,
        "emitRequireType": false
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts"
    ]
}